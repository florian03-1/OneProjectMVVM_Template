<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:OneProjectMVVM_Template.Other.Resources.ResourceDictionaries">

    <Style TargetType="{x:Type Button}">
        <Setter Property="Padding" Value="15,5" />
    </Style>

    <Style TargetType="{x:Type Button}" x:Key="btnImportant">
        <Setter Property="FontWeight" Value="Bold"></Setter>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Padding" Value="15,5" />
    </Style>


    <Style TargetType="{x:Type Label}">
        <Setter Property="Padding" Value="0"></Setter>
    </Style>

    <Style  TargetType="{x:Type Label}" x:Key="lblGridDescription">
        <Setter Property="Margin" Value="5,3,15,3"/>
        <Setter Property="FontWeight" Value="DemiBold"/>
    </Style>
</ResourceDictionary>